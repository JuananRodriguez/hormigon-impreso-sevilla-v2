---
import Image from "fulldev-ui/components/Image.astro";
import Link from "fulldev-ui/components/Link.astro";

const waMessage = new URLSearchParams({
  text: "Buenos días, estoy interesado en sus servicios.",
}).toString();
---

<section id="contact-info-banner">
  <Link href=`https://wa.me/34641434996?${waMessage}` size="lg">
    <span>Contáctanos por</span>
    <Image
      class="whatsapp-logotype"
      alt="Logotipo de whatsapp"
      src="/images/social/whatsapp_logo_inline_white.svg"
    />
  </Link>
</section>

<style>
  #contact-info-banner {
    position: sticky;
    position: -webkit-sticky;
    height: 3.5rem;
    width: 100%;
    left: 0px;
    top: 0px;
    bottom: 0px;
    z-index: 1;
    background-color: #075e54;
  }

  #contact-info-banner a {
    display: block;
    color: #fff;
    font-weight: 600;
    font-size: 1.25rem;
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  #contact-info-banner .whatsapp-logotype {
    height: 2rem;
    display: inline;
    width: auto;
  }
</style>
