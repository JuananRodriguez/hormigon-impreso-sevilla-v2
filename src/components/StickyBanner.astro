---
import Image from "fulldev-ui/components/Image.astro";
import Link from "fulldev-ui/components/Link.astro";

const waMessage = new URLSearchParams({
  text: "Buenos días, estoy interesado en sus servicios.",
}).toString();
---

<section id="contact-info-banner">
  <div class="contact-info-banner-content">
    <Link
      href="tel:+34641434996"
      size="lg"
      target="_blank"
      class="contact-section telephone-section"
    >
      <Image
        class="contact-section-icon"
        alt="Contacta por whatsapp"
        src="/images/social/phone_logo.svg"
      />
      Teléfono
      <span class="sr-only">Abrir aplicación de teléfono para llamar</span>
    </Link>
    <Link
      href="mailto:info@hormigonimpresosevilla.es"
      size="lg"
      target="_blank"
      class="contact-section email-section"
    >
      <Image
        class="contact-section-icon"
        alt="Contacta por whatsapp"
        src="/images/social/email_logo.svg"
      />
      Email
      <span class="sr-only">Abrir aplicación de email para enviar email</span>
    </Link>
    <Link
      href=`https://wa.me/34641434996?${waMessage}`
      size="lg"
      target="_blank"
      class="contact-section whatsapp-section"
    >
      <Image
        class="contact-section-icon"
        alt="Contacta por whatsapp"
        src="/images/social/whatsapp_logo.svg"
      />
      WhatsApp
      <span class="sr-only">Abrir aplicación whatsapp</span>
    </Link>
  </div>
</section>

<style>
  #contact-info-banner {
    position: sticky;
    position: -webkit-sticky;
    height: 2.5rem;
    width: 100%;
    left: 0px;
    top: 0px;
    bottom: 0px;
    z-index: 1;
    background-color: #fff;
  }

  .contact-info-banner-content {
    display: flex;
    height: 100%;
    width: 100%;
  }

  #contact-info-banner .contact-section {
    display: block;
    color: #fff;
    font-weight: 600;
    font-size: 0.85rem;
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  @media only screen and (min-width: 720px) {
    #contact-info-banner .contact-section {
      font-size: 1.25rem;
    }
  }

  .telephone-section {
    background-color: #0e1e43;
  }

  .whatsapp-section {
    background-color: #075e54;
  }
  .email-section {
    background-color: #6b111b;
  }

  #contact-info-banner .contact-section-icon {
    height: 1.8rem;
    display: inline;
    width: auto;
  }
</style>
