---
import HeaderLink from "./HeaderLink.astro";
---

<div class="menu">
  <input id="open-close" name="open-close" type="checkbox" value="" />
  <label for="open-close" class="toggle-button">
    <span class="close" title="Cerrar">Cerrar</span>
    <span class="open" title="Abrir">Abrir</span>
  </label>
  <div class="content">
    <HeaderLink href="/services">¿Qué hacemos?</HeaderLink>
    <HeaderLink href="/frequently-asked-questions"
      >Preguntas Frecuentes</HeaderLink
    >
  </div>
</div>

<style>
  input#open-close {
    visibility: hidden;
    position: absolute;
    top: -9999px;
  }

  .toggle-button {
    display: block;
    width: 50px;
    height: 50px;
    position: relative;
    cursor: pointer;
    box-sizing: border-box;
  }

  .toggle-button:before,
  .toggle-button:after {
    position: absolute;
    display: block;
    content: " ";
    width: calc(100% / 2);
    box-sizing: border-box;
    left: calc(100% / 4);
    transition: all 0.2s ease-out;
  }

  .toggle-button:before {
    top: calc(100% / 4);
    height: calc(100% / 4);
    border-top: 1px solid black;
    border-bottom: 1px solid black;
    background-color: transparent;
  }

  .toggle-button:after {
    height: 1px;
    background-color: black;
    bottom: calc(100% / 4);
  }

  input#open-close:checked + .toggle-button:before,
  input#open-close:checked + .toggle-button:after {
    top: calc(100% / 2);
    height: 1px;
    border-bottom: 0;
  }

  input#open-close:checked + .toggle-button:before {
    transform: rotate(45deg);
  }

  input#open-close:checked + .toggle-button:after {
    transform: rotate(-45deg);
  }

  .open,
  .close {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    text-indent: -9999px;
  }

  .open {
    display: block;
  }

  .close {
    display: none;
  }

  input#open-close:checked + .toggle-button .open {
    display: none;
  }

  input#open-close:checked + .toggle-button .close {
    display: block;
  }

  .content {
    max-width: 400px;
    position: absolute;
    right: 0px;
    top: 66px;
    width: calc(100% - 2rem);
    height: calc(100vh - 98px);
    background-color: white;
    padding: 1rem;
    display: none;
  }

  input#open-close:checked + label + .content {
    display: block;
  }
</style>
